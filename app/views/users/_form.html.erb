<%= form_with model: user do |form| %>
  <% if user.errors.any? %>
    <div id="errors">
      <h2><%= pluralize(user.errors.count, 'error') %> stopped this user from being saved</h2>
  <% end %>

  <%= form.label :username, 'Username: ' %>
  <%= form.text_field :username, placeholder: 'Your user name here' %>
  <div>
  <% user.errors.full_messages_for(:password).each do |error| %>
  <%= error %>
  <% end %>
  </div>
  <br><br>

  <%= form.label :email, 'Email: ' %>
  <%= form.email_field :email, placeholder: 'example@example.com' %>
  <div>
  <% user.errors.full_messages_for(:password).each do |error| %>
  <%= error %>
  <% end %>
  </div>
  <br><br>

  <%= form.label :password, 'Password: ' %>
  <%= form.password_field :password, placeholder: '********' %>
  <div>
  <% user.errors.full_messages_for(:password).each do |error| %>
  <%= error %>
  <% end %>
  </div>
  <br><br>

  <%= form.submit %>
<% end %>
